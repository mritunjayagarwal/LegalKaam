<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>LegalKaam Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="/../admin/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/../admin/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="/../admin/vendors/select2/select2.min.css">
    <link rel="stylesheet" href="/../admin/vendors/select2-bootstrap-theme/select2-bootstrap.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="/../admin/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="/../admin/images/favicon.png" />
    <script src="https://cdn.tiny.cloud/1/9e7y565a68c02tp5dds9x500uc55osff3f8wdesdx00krtam/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
      tinymce.init({
        selector: '#desc1'
      });
    </script>
  </head>
  <body>
    <div class="container-scroller">
      <%- include("../partials/admin/main.ejs") %>
      <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">Edit Term Details</h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Admin</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Edit Terms Page</li>
                </ol>
              </nav>
            </div>
            <div class="row">
                <div class="col-12 my-4">
                    <form class="forms-sample" action = "/admin/edit/terms/<%= term.type %>" method = "post">
                      <div class="form-group">
                        <label>Select Category</label>
                        <select class="js-example-basic-single" name="nterm" style="width:100%">
                            <option value = "<%= term.type %>"><%= term.type.replaceAll('-', ' ') %></option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="exampleTextarea1">Enter Description</label>
                        <textarea class="form-control my-3" id = "desc1" name = "desc1" rows="4"><%= term.desc %></textarea>
                      </div>
                          <% for(var i = 0; i < 5; i++){ %>
                            <% if(term.points[i]){ %>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Enter point <%= i+1 %> Details</label>
                                    <input type="text" name = "point<%= i+1 %>" class="form-control mb-2" id="exampleInputUsername1" placeholder="Enter Link Name" value = "<%= term.points[i].point %>">
                                  </div>
                            <% }else{ %>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Enter point <%= i+1 %> Details</label>
                                    <input type="text" name = "point<%= i+1 %>" class="form-control mb-2" id="exampleInputUsername1" placeholder="Enter Link Name" value = "<%= term.points[i].point %>">
                                  </div>
                            <% } %>
                          <% } %>  
                        <button type="submit" class="btn btn-primary py-3 btn-block ">Submit</button>
                      </form>
                </div>
            </div>
          </div>
      </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/../admin/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/../admin/vendors/select2/select2.min.js"></script>
    <script src="/../admin/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/../admin/js/off-canvas.js"></script>
    <script src="/../admin/js/hoverable-collapse.js"></script>
    <script src="/../admin/js/misc.js"></script>
    <script src="/../admin/js/settings.js"></script>
    <script src="/../admin/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/../admin/js/file-upload.js"></script>
    <script src="/../admin/js/typeahead.js"></script>
    <script src="/../admin/js/select2.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>